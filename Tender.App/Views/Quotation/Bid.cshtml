@model Tender.Models.Models.RFQ_BIDDING

@{
    ViewBag.Title = "Create Tender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="card card-solid">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-4">
                    <h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>
                    <div class="col-12">
                        <img src="~/App_Asset/dist/img/ML_Red_wave__1_.jpg" class="product-image" alt="Product Image">
                    </div>
                    <div class="col-12 product-image-thumbs">
                        <div class="product-image-thumb active"><img src="~/App_Asset/dist/img/ML_Red_wave__1_.jpg" alt="Product Image"></div>
                        <div class="product-image-thumb"><img src="~/App_Asset/dist/img/ML_Red_wave__1_.jpg" alt="Product Image"></div>
                        <div class="product-image-thumb"><img src="~/App_Asset/dist/img/ML_Red_wave__1_.jpg" alt="Product Image"></div>
                    </div>
                </div>
                <div class="col-12 col-sm-8">
                    <h4 class="my-3">Tender Number :<span class="text-primary">#TND014654657455</span> </h4>
                    <h6 class="my-3">Name :<span class="text-success"> VSN GD Chest Freezer RE-150L Maple Leaf Red Wave</span></h6>
                    <p>About Tender : A tender is an invitation to bid for a project or accept a formal offeto the process whereby governments</p>
                    <hr>
                    <h5>This Auction Ends in</h5>
                    <span class="text-danger">0d  : 7h  : 34m  : 24s</span>
                    <hr />
                    <div class="row">
                        <div class="col">Active Bidders : 60 </div>
                        <div class="col">Watching : 100 </div>
                        <div class="col">Total Bids : 80 </div>
                    </div>

                    <div class="bg-gray py-2 px-3 mt-4">
                        <h2 class="mb-0">
                            $80.00
                        </h2>
                        <h4 class="mt-0">
                            <small>Ex Tax: $80.00 </small>
                        </h4>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <nav class="w-100">
                    <div class="nav nav-tabs" id="product-tab" role="tablist">
                        <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Tender Information</a>
                        <a class="nav-item nav-link" id="product-comments-tab" data-toggle="tab" href="#product-comments" role="tab" aria-controls="product-comments" aria-selected="false">Item Information</a>
                        <a class="nav-item nav-link" id="product-rating-tab" data-toggle="tab" href="#product-rating" role="tab" aria-controls="product-rating" aria-selected="false">Shipment Details</a>
                        <a class="nav-item nav-link" id="product-submit-tab" data-toggle="tab" href="#product-submit" role="tab" aria-controls="product-rating" aria-selected="false">Apply Bid</a>
                    </div>
                </nav>
                <div class="tab-content p-3" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab">
                        <div class="card-body pad row">
                            <div class="col-12">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th>Tender Number  </th>
                                            <td>: #TN012654613165</td>
                                        </tr>
                                        <tr>
                                            <th>Bidding type </th>
                                            <td>: Submit Once</td>
                                        </tr>
                                        <tr>
                                            <th>Bidding Start:  </th>
                                            <td>: 20 January 2022</td>
                                        </tr>
                                        <tr>
                                            <th>Bidding End:  </th>
                                            <td>: 20 April 2022</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="product-comments" role="tabpanel" aria-labelledby="product-comments-tab">
                        <div class="card-body pad row">
                            <div class="col-12">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th>Product Name  </th>
                                            <td>: VSN GD Chest Freezer RE-150L Maple Leaf Red Wave</td>
                                        </tr>
                                        <tr>
                                            <th>Tender Rate </th>
                                            <td>: 200 BDT</td>
                                        </tr>
                                        <tr>
                                            <th>Product Quantity  </th>
                                            <td>: 500 TON</td>
                                        </tr>
                                        <tr>
                                            <th>Product Description   </th>
                                            <td>: A tender is an invitation to bid for a project or accept a formal offeto the process whereby governments</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="product-rating" role="tabpanel" aria-labelledby="product-rating-tab">
                        <div class="card-body pad row">
                            <div class="col-12">


                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th>Partial ShipMent   </th>
                                            <td>: Not Allow</td>
                                        </tr>
                                        <tr>
                                            <th>Last Shipment Date </th>
                                            <td>: 01 January 2022</td>
                                        </tr>
                                        <tr>
                                            <th>Shipment Mode</th>
                                            <td>:Sea</td>
                                        </tr>
                                        <tr>
                                            <th>Port Name</th>
                                            <td>:Chittagong Port</td>
                                        </tr>
                                        <tr>
                                            <th>Receiver Name   </th>
                                            <td>: Pran Rfl Group</td>
                                        </tr>
                                        <tr>
                                            <th>Receiver Details</th>
                                            <td>: Middle Badda, Pran RFL Center,Dhaka , Bangladesh</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>                   
                    <div class="tab-pane fade" id="product-submit" role="tabpanel" aria-labelledby="product-submit-tab">
                        <div class="card-body pad row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.LOADING_ADDRESS, new { @class = "control-label" })
                                    @Html.TextAreaFor(m => m.LOADING_ADDRESS, new { @class = "form-control form-control-sm", rows = "1", placeholder = "Enter Loding Address" })
                                    @Html.ValidationMessageFor(m => m.LOADING_ADDRESS, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.SENDER_NAME, new { @class = "control-label" })
                                    @Html.EditorFor(model => model.SENDER_NAME, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "Sender Name" } })
                                    @Html.ValidationMessageFor(m => m.SENDER_NAME, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.SENDER_DETAILS, new { @class = "control-label" })
                                    @Html.TextAreaFor(m => m.SENDER_DETAILS, new { @class = "form-control form-control-sm", rows = "1", placeholder = "Enter Sending Details" })
                                    @Html.ValidationMessageFor(m => m.SENDER_DETAILS, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row float-right">
                <div class="col-12 float-right">
                    <button type="submit" class="btn btn-success btn-sm">Submit</button>
                </div>
            </div>
        </div>

    </div>

</section>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('.product-image-thumb').on('click', function () {
                var $image_element = $(this).find('img')
                $('.product-image').prop('src', $image_element.attr('src'))
                $('.product-image-thumb.active').removeClass('active')
                $(this).addClass('active')
            })
        })
    </script>

}

