@model Tender.Models.Models.VENDOR_DETAILS

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">User Profile</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img src="~/App_Asset/dist/img/user1-128x128.jpg" class="profile-user-img img-fluid img-circle" alt="User profile picture" />
                            </div>
                            <h3 class="profile-username text-center">@Model.ORGANIZATION_NAME</h3>
                            <p class="text-muted text-center mb-0 pd-0">@Model.VENDOR_EMAIL</p>
                            <p class="text-muted text-center">@Model.CONTACT_NUMBER</p>
                        </div>

                    </div>


                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">About Me</h3>
                        </div>
                        <span class="ml-3 text-primary">Year of Establishment :&nbsp;  @Model.YEAR_OF_ESTABLISHMENT</span>
                        <span class="ml-3 text-primary">Yearly Trun Over :&nbsp;  @Model.YEARLY_TRUNOVER</span>
                        <span class="ml-3 text-primary">Tax Number :&nbsp;  @Model.TAX_NUMBER</span>
                        <span class="ml-3 text-primary">Trade Number :&nbsp;  @Model.TRADE_NUMBER</span>
                        <span class="ml-3 text-primary">Contact Person  :&nbsp;  @Model.CONTACT_NAME</span>
                        <br />

                        <div class="card-body mb-0 pb-0">

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                            <p class="text-muted">
                                Address : @Model.ADDRESS_1
                                <br /> @Model.ADDRESS_2
                            </p>
                            <hr>
                            <strong><i class="fas fa-business-time mr-1"></i> Business</strong><br />
                            @foreach (var CatItem in Model.VENDOR_CATEGORY)
                            {
                                <span class="badge badge-primary">@CatItem.CATEGORY_NAME</span>
                            }
                            <hr />
                            <strong><i class="fa fa-certificate mr-1"></i> Certificate</strong><br />
                            @foreach (var CatItem in Model.VENDOR_CERTIFICATE)
                            {
                                <span class="badge badge-primary">@CatItem.CERTIFICATE_NAME</span>
                            }
                            <hr />
                            <strong><i class="fa fa-file mr-1"></i> Documents</strong><br />
                            @foreach (var CatItem in Model.VENDOR_DOCUMENTS)
                            {
                                <span class="badge badge-primary">@CatItem.DOCUMENTS_NAME</span>
                            }
                            <hr />
                       
                        </div>
         

                    </div>

                </div>

                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link" href="#follow" data-toggle="tab">Follow</a></li>
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Activity</a></li>
                                <li class="nav-item"><a class="nav-link" href="#UpdateProfile" data-toggle="tab">Update Profile</a></li>
                                <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Change Password</a></li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane" id="follow">
                                    <strong><i class="fa fa-list-alt mr-1"></i> Products  </strong>
                                    <p>
                                        @foreach (var CatItem in Model.VENDOR_PRODUCTS)
                                        {
                                            <span> # @CatItem.PRODUCTS_NAME </span>

                                        }
                                    </p>

                                </div>
                                
                                <div class="active tab-pane" id="activity">
                                  
                                </div>

                                <div class="tab-pane" id="UpdateProfile">
                                    @using (Html.BeginForm("UserProfile", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="card-body">
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.VENDOR_USER_ID, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.VENDOR_USER_ID, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "User Id" } })
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.COUNTRY_NAME, new { @class = "control-label" })
                                                        @*@Html.DropDownList("COUNTRY_NAME", null, "--Please select--", new { @class = "form-control form-control-sm select2" })*@

                                                        @Html.EditorFor(model => model.COUNTRY_NAME, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "User Id" } })
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.ADDRESS_1, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.ADDRESS_1, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "1st Address" } })
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.ADDRESS_2, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.ADDRESS_2, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "2nd Address" } })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.YEAR_OF_ESTABLISHMENT, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.YEAR_OF_ESTABLISHMENT, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "1st Address" } })
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.YEARLY_TRUNOVER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.YEARLY_TRUNOVER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "2nd Address" } })
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.YEARLY_TRUNOVER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.YEARLY_TRUNOVER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "2nd Address" } })
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.TAX_NUMBER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.TAX_NUMBER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "1st Address" } })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.TRADE_NUMBER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.TRADE_NUMBER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "2nd Address" } })
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.YEARLY_TRUNOVER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.YEARLY_TRUNOVER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "2nd Address" } })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.CONTACT_NAME, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.CONTACT_NAME, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "Contact Person" } })
                                                    </div>
                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(Model => Model.CONTACT_NUMBER, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.CONTACT_NUMBER, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "Contact Number" } })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="icheck-primary">
                                                            @Html.EditorFor(model => model.PURCHASER, new { htmlAttributes = new { id = "Purchaser" } })
                                                            <label for="Purchaser">
                                                                Purchaser
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="icheck-primary">
                                                            @Html.EditorFor(model => model.PURCHASER_NOTIFY, new { htmlAttributes = new { id = "purNotify" } })
                                                            <label for="purNotify">
                                                                Get Purchaser Notification
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="icheck-primary">
                                                            @Html.EditorFor(model => model.SUPPLIER, new { htmlAttributes = new { id = "Purchaser" } })
                                                            <label for="Purchaser">
                                                                Supplier
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="icheck-primary">
                                                            @Html.EditorFor(model => model.SUPPLIER_NOTIFY, new { htmlAttributes = new { id = "purNotify" } })
                                                            <label for="purNotify">
                                                                Get Supplier Notification
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        @Html.Label("Upload Profile Picture", new { @class = "control-label" })
                                                        <input type="file" name="ProfilePicture" accept=".png, .jpg, .jpeg" /><br />
                                                        <span class="text-success">png,jpg,jpeg format only</span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row float-right">
                                                <div class="col-12 float-right">
                                                    <button type="submit" class="btn btn-danger btn-sm">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>

                                <div class="tab-pane" id="settings">

                                    @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-group row">
                                            <label for="inputName" class="col-sm-4 col-form-label">User Id</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="inputName" value="@Model.VENDOR_USER_ID" name="UserId" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-4 col-form-label">Email</label>
                                            <div class="col-sm-8">
                                                <input type="email" class="form-control" id="inputEmail" value="@Model.VENDOR_EMAIL" name="Email" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputName2" class="col-sm-4 col-form-label">Old Password</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" id="inputName2" placeholder="Current Password" name="OldPass" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputExperience" class="col-sm-4 col-form-label">New Password</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" id="inputExperience" placeholder="New Password" name="NewPass" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputSkills" class="col-sm-4 col-form-label">Confirm Password</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" id="inputSkills" placeholder="Confirm Password" name="ConfirmPass" required>
                                            </div>
                                        </div>
                                        <div class="form-group row float-right">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="submit" class="btn btn-danger btn-sm mr-3">Submit</button>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>
    </section>
</div>








    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
