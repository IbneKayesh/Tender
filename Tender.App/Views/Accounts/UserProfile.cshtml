@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Profile</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">User Profile</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img src="~/App_Asset/dist/img/user1-128x128.jpg" class="profile-user-img img-fluid img-circle" alt="User profile picture" />
                        </div>
                        <h3 class="profile-username text-center">@Model.ORGANIZATION_NAME</h3>
                        <p class="text-muted text-center">@Model.VENDOR_EMAIL</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                Year of Establishment :  <a class="float-right">@Model.YEAR_OF_ESTABLISHMENT</a>
                            </li>
                            <li class="list-group-item">
                                Yearly Trunover :  <a class="float-right">@Model.YEARLY_TRUNOVER</a>
                            </li>
                            <li class="list-group-item">
                                Number of Employees :  <a class="float-right">@Model.NO_OF_EMPLOYEES</a>
                            </li>
                            <li class="list-group-item">
                                Tax Number :  <a class="float-right">@Model.TAX_NUMBER</a>
                            </li>
                            <li class="list-group-item">
                                Trade Number :  <a class="float-right">@Model.TRADE_NUMBER</a>
                            </li>
                            <li class="list-group-item">
                                Contact Person :  <a class="float-right">@Model.CONTACT_NAME</a>
                            </li>
                            <li class="list-group-item">
                                Contact Number :  <a class="float-right">@Model.CONTACT_NUMBER</a>
                            </li>

                        </ul>
                        <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                    </div>

                </div>


                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">About Me</h3>
                    </div>

                    <div class="card-body">

                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">
                            Address : @Model.ADDRESS_1
                            <br /> @Model.ADDRESS_2
                        </p>
                        <hr>
                        <strong><i class="fas fa-business-time mr-1"></i> Business</strong>
                        @foreach (var CatItem in Model.VENDOR_CATEGORY)
                        {
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(ModelItem => CatItem.IS_ACTIVE, new { type = "checkbox" })
                                    @CatItem.CATEGORY_NAME
                                </label>
                            </div>
                        }
                        <hr />
                        <strong><i class="fa fa-certificate mr-1"></i> Certificate</strong>
                        @foreach (var CatItem in Model.VENDOR_CERTIFICATE)
                        {
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(ModelItem => CatItem.IS_ACTIVE, new { type = "checkbox" })
                                    @CatItem.CERTIFICATE_NAME
                                </label>
                            </div>
                        }
                        <hr />
                        <strong><i class="fa fa-file mr-1"></i> Documents</strong>
                        @foreach (var CatItem in Model.VENDOR_DOCUMENTS)
                        {
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(ModelItem => CatItem.IS_ACTIVE, new { type = "checkbox" })
                                    @CatItem.DOCUMENTS_NAME
                                </label>
                            </div>
                        }
                        <hr />
                        <strong><i class="fas fa-product mr-1"></i> Products  </strong>
                        <p>
                            @foreach (var CatItem in Model.VENDOR_PRODUCTS)
                            {
                            <span> @CatItem.PRODUCTS_NAME ,</span>

                            }
                        </p>
                            <hr />
                        </div>

                </div>

            </div>

            <div class="col-md-9">
