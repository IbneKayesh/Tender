
@{
    ViewBag.Title = "_Changepassword";
}

@using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <label for="CUSER_ID" class="col-sm-4 col-form-label">User Id</label>
        <div class="col-sm-8">
            <input id="CUSER_ID" type="text" class="form-control form-control-sm" value="@Model.VENDOR_USER_ID" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="CEMAIL_ID" class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
            <input id="CEMAIL_ID" type="email" class="form-control form-control-sm" value="@Model.VENDOR_EMAIL" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="OPASWD" class="col-sm-4 col-form-label">Old Password</label>
        <div class="col-sm-8">
            <input id="OPASWD" type="password" class="form-control form-control-sm" placeholder="Current Password" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="NPASWD" class="col-sm-4 col-form-label">New Password</label>
        <div class="col-sm-8">
            <input id="NPASWD" type="password" class="form-control form-control-sm" placeholder="New Password" name="NewPass" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="CPASWD" class="col-sm-4 col-form-label">Confirm Password</label>
        <div class="col-sm-8">
            <input id="CPASWD" type="password" class="form-control form-control-sm" placeholder="Confirm Password" name="ConfirmPass" required>
        </div>
    </div>
    <div class="form-group row float-right">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-danger btn-sm mr-3">Submit</button>
        </div>
    </div>
}