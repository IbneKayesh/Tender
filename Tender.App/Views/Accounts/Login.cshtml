@model Tender.Models.Models.VENDOR_LOGIN

@{
    ViewBag.Title = "Login In";
    Layout = "~/Views/Shared/_LayoutRL.cshtml";
}

<div class="card card-outline card-primary" style="background-color:bisque;">
    <div class="card-header text-center">
        <a href="#" class="h1 text-bold"><b>RF</b>Q</a>
    </div>
    <div class="card-body">
        <p class="login-box-msg">Sign in to start your session
        
        </p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.AntiForgeryToken()
            <div class="input-group mb-3">
                @Html.EditorFor(model => model.VENDOR_EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                @Html.EditorFor(model => model.VENDOR_PASSWD, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    @*<div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>*@
                </div>

                <div class="col-4">
                    <button type="submit" class="btn btn-success btn-block btn-sm">Login In</button>
                </div>

            </div>
        }
        <div class="social-auth-links text-center mt-2 mb-3">
            <a href="@Url.Action("Registration","Accounts")" class="btn btn-block btn-primary"> Register a new membership
            </a>
            @*<a href="@Url.Action("ForgotPassword","Accounts")" class="btn btn-block btn-danger">
                <i class="fab fa-user-alt mr-2"></i> I forgot my password
            </a>*@
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
